{
  "name": "my-sky",
  "scripts": {
    "generate-css": "node scripts/generate-css.mjs",
    "predev": "npm run generate-css",
    "dev": "wrangler dev --live-reload",
    "predeploy": "npm run generate-css",
    "deploy": "wrangler deploy --minify",
    "generate": "drizzle-kit generate",
    "migrate:local": "wrangler d1 migrations apply skyposts --local",
    "migrate:prod": "wrangler d1 migrations apply skyposts --remote",
    "migrate:all": "npm run migrate:local && npm run migrate:prod"
  },
  "dependencies": {
    "@atproto/api": "^0.13.35",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.38.4",
    "hono": "^4.8.3",
    "just-truncate": "^2.2.0",
    "uuid": "^11.1.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250620.0",
    "daisyui": "^4.12.24",
    "drizzle-kit": "^0.31.2",
    "tailwindcss": "^3.4.17",
    "wrangler": "^4.21.2"
  }
}
