{
  "name": "skyscheduler",
  "scripts": {
    "dev": "wrangler dev --live-reload",
    "dev:queue": "wrangler dev -c wrangler.toml --persist-to .wrangler/state --live-reload",
    "deploy": "wrangler deploy --minify",
    "auth": "npm run auth:generate && npm run auth:format",
    "auth:generate": "npx @better-auth/cli@latest generate --config src/auth/index.ts --output src/db/auth.schema.ts -y",
    "auth:format": "prettier --write src/db/auth.schema.ts",
    "generate": "drizzle-kit generate",
    "migrate:local:db": "wrangler d1 migrations apply skyposts --local",
    "migrate:local:pragma": "wrangler d1 execute skyposts --command \"PRAGMA optimize\" --local -y",
    "migrate:local": "run-s migrate:local:*",
    "migrate:prod:db": "wrangler d1 migrations apply skyposts --remote",
    "migrate:prod:pragma": "wrangler d1 execute skyposts --command \"PRAGMA optimize\" --remote -y",
    "migrate:prod": "run-s migrate:prod:*",
    "migrate:remote": "npm run migrate:prod",
    "migrate:optimize": "npm run migrate:prod:pragma && npm run migrate:local:pragma",
    "migrate:all": "npm run migrate:local && npm run migrate:prod",
    "minify:repost": "minify assets/js/repostHelper.js > assets/js/repostHelper.min.js",
    "minify:post": "minify assets/js/postHelper.js > assets/js/postHelper.min.js",
    "minify:main": "minify assets/js/main.js > assets/js/main.min.js",
    "minify:settings": "minify assets/js/settings.js > assets/js/settings.min.js",
    "minify": "run-p minify:*",
    "types": "wrangler types src/wrangler.d.ts"
  },
  "dependencies": {
    "@atproto/api": "^0.18.17",
    "better-auth": "^1.4.17",
    "better-auth-cloudflare": "^0.2.9",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.7",
    "human-id": "^4.1.3",
    "image-dimensions": "^2.5.0",
    "just-flatten-it": "^5.2.0",
    "just-has": "^2.3.0",
    "just-is-empty": "^3.4.1",
    "just-random": "^3.2.0",
    "just-safe-get": "^4.2.0",
    "just-split": "^3.2.0",
    "just-truncate": "^2.2.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^24.10.9",
    "drizzle-kit": "^0.31.8",
    "minify": "^15.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.1",
    "wrangler": "^4.61.0"
  },
  "engines": {
    "node": ">=24.11.1"
  }
}
