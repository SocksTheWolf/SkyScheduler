{
  "name": "skyscheduler",
  "license": "MIT",
  "homepage": "https://skyscheduler.work",
  "scripts": {
    "dev": "wrangler dev --live-reload",
    "dev:queue": "wrangler dev -c wrangler.toml --persist-to .wrangler/state --live-reload",
    "deploy": "wrangler deploy --minify --env=''",
    "staging": "wrangler deploy --env staging --minify",
    "auth:generate": "npx @better-auth/cli@latest generate --config src/auth/index.ts --output src/db/auth.schema.ts -y",
    "auth:format": "prettier --write src/db/auth.schema.ts",
    "auth": "run-s auth:*",
    "generate": "drizzle-kit generate",
    "migrate:local:db": "wrangler d1 migrations apply skyposts --local",
    "migrate:local:pragma": "wrangler d1 execute skyposts --command \"PRAGMA optimize\" --local -y",
    "migrate:local": "run-s migrate:local:*",
    "migrate:prod:db": "wrangler d1 migrations apply skyposts --remote",
    "migrate:prod:pragma": "wrangler d1 execute skyposts --command \"PRAGMA optimize\" --remote -y",
    "migrate:prod": "run-s migrate:prod:*",
    "migrate:staging:db": "wrangler d1 migrations apply skyposts-dev --remote",
    "migrate:staging:pragma": "wrangler d1 execute skyposts-dev --command \"PRAGMA optimize\" --remote -y",
    "migrate:staging": "run-s migrate:staging:*",
    "migrate:remote": "npm run migrate:prod && npm run migrate:staging",
    "migrate:optimize": "run-s migrate:*:pragma",
    "migrate:all": "npm run migrate:local && npm run migrate:prod",
    "minify:main": "minify assets/js/main.js > assets/js/main.min.js",
    "minify:app": "cat assets/js/*Helper.js | minify --js > assets/js/app.min.js",
    "minify:settings": "minify assets/js/settings.js > assets/js/settings.min.js",
    "minify:style": "minify assets/css/stylesheet.css > assets/css/stylesheet.min.css",
    "minify": "run-p minify:*",
    "sitemap:make": "sscli > assets/sitemap.xml",
    "sitemap:clean": "replace-in-file \"/homepage|\\.tsx/g\" \"\" assets/sitemap.xml",
    "sitemap": "run-s sitemap:*",
    "types": "wrangler types src/wrangler.d.ts"
  },
  "dependencies": {
    "@atproto/api": "^0.18.21",
    "@hono/standard-validator": "^0.2.2",
    "better-auth": "^1.4.18",
    "better-auth-cloudflare": "^0.2.9",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.10",
    "hono-openapi": "^1.2.0",
    "human-id": "^4.1.3",
    "image-dimensions": "^2.5.0",
    "just-flatten-it": "^5.2.0",
    "just-has": "^2.3.0",
    "just-is-empty": "^3.4.1",
    "just-random": "^3.2.0",
    "just-remove": "^3.2.0",
    "just-safe-get": "^4.2.0",
    "just-split": "^3.2.0",
    "just-truncate": "^2.2.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^24.10.13",
    "drizzle-kit": "^0.31.9",
    "minify": "^14.1.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.8.1",
    "replace-in-file": "^8.4.0",
    "static-sitemap-cli": "^2.2.7",
    "wrangler": "^4.66.0"
  },
  "engines": {
    "node": ">=24.11.1"
  }
}
